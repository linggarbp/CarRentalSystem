@model IEnumerable<CarRentalSystem.Models.Car>
@{
    ViewData["Title"] = "Available Cars";
}

<div class="row">
    <div class="col-12">
        <h1 class="mb-4">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    @foreach (var car in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                @if (!string.IsNullOrEmpty(car.ImageUrl))
                {
                    <img src="@car.ImageUrl" class="card-img-top" alt="@car.Brand @car.Model" style="height: 200px; object-fit: cover;">
                }
                else
                {
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                        <i class="fas fa-car fa-3x text-muted"></i>
                    </div>
                }
                <div class="card-body">
                    <h5 class="card-title">@car.Brand @car.Model</h5>
                    <p class="card-text">
                        <strong>Year:</strong> @car.Year<br>
                        <strong>License:</strong> @car.LicensePlate<br>
                        <strong>Price:</strong> <span class="text-primary fw-bold">Rp @car.PricePerDay.ToString("N0")/day</span>
                    </p>

                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <span class="badge bg-info">Admin View</span>
                            <a asp-controller="Car" asp-action="Edit" asp-route-id="@car.Id" class="btn btn-outline-primary btn-sm ms-2">
                                <i class="fas fa-edit"></i> Edit Car
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Rental" asp-action="RentCar" asp-route-carId="@car.Id" class="btn btn-primary">
                                <i class="fas fa-calendar-plus"></i> Rent This Car
                            </a>
                        }
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary">
                            <i class="fas fa-sign-in-alt"></i> Login to Rent
                        </a>
                    }
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <h4>No cars available</h4>
        <p class="text-muted">Please check back later for available cars.</p>
    </div>
}
