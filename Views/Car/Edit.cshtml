@model CarRentalSystem.ViewModels.CarViewModel
@{
    ViewData["Title"] = "Edit Car";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header">
                <h4>@ViewData["Title"]</h4>
            </div>
            <div class="card-body">

                <!-- DETAILED DEBUG INFO -->
                <div class="alert alert-info">
                    <strong>Debug - Model Values:</strong><br>
                    ID: @Model.Id<br>
                    Brand: '@Model.Brand' (Length: @(Model.Brand?.Length ?? 0))<br>
                    Model: '@Model.Model' (Length: @(Model.Model?.Length ?? 0))<br>
                    Year: @Model.Year<br>
                    License: '@Model.LicensePlate' (Length: @(Model.LicensePlate?.Length ?? 0))<br>
                    Price: @Model.PricePerDay<br>
                    Image: '@Model.ImageUrl'
                </div>

                <form method="post" action="/Car/Edit/@Model.Id">
                    @Html.AntiForgeryToken()

                    <input type="hidden" name="Id" value="@Model.Id" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Brand</label>
                                <input type="text" name="Brand" class="form-control"
                                       value="@Model.Brand" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Model</label>
                                <input type="text" name="Model" class="form-control"
                                       value="@Model.Model" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Year</label>
                                <input type="number" name="Year" class="form-control"
                                       value="@Model.Year" min="1900" max="2030" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">License Plate</label>
                                <input type="text" name="LicensePlate" class="form-control"
                                       value="@Model.LicensePlate" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Price Per Day ($)</label>
                                <input type="number" name="PricePerDay" class="form-control"
                                       value="@Model.PricePerDay" step="0.01" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Image URL</label>
                                <input type="url" name="ImageUrl" class="form-control"
                                       value="@Model.ImageUrl" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Update Car
                        </button>
                        <a href="/Car/Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
