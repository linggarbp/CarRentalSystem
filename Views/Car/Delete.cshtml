@model CarRentalSystem.Models.Car
@{
    ViewData["Title"] = "Delete Car";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h3>@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Warning!</strong> Are you sure you want to delete this car? This action cannot be undone.
                </div>

                <div class="row">
                    <div class="col-md-4">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="@Model.Brand @Model.Model"
                                 class="img-fluid rounded" style="max-height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center rounded"
                                 style="height: 150px;">
                                <span class="text-muted">No Image</span>
                            </div>
                        }
                    </div>
                    <div class="col-md-8">
                        <h4>@Model.Brand @Model.Model (@Model.Year)</h4>
                        <p><strong>License Plate:</strong> @Model.LicensePlate</p>
                        <p><strong>Price per Day:</strong> $@Model.PricePerDay</p>
                        <p>
                            <strong>Status:</strong>
                            @if (Model.Status == CarRentalSystem.Models.CarStatus.Available)
                            {
                                <span class="badge bg-success">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-warning">Rented</span>
                            }
                        </p>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Are you absolutely sure you want to delete this car?')">
                            <i class="fas fa-trash"></i> Yes, Delete Car
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
