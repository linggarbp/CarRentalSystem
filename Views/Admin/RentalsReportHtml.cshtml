@model IEnumerable<CarRentalSystem.Models.Rental>
@{
    ViewData["Title"] = "Car Rental Report";
    Layout = null; // No layout for clean print
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <style>
        /* Print-specific styles */
        @@media print {
            .no-print

        {
            display: none !important;
        }

        .print-break {
            page-break-after: always;
        }

        body {
            font-size: 12px;
            line-height: 1.2;
            margin: 0;
            padding: 15px;
        }

        .table {
            font-size: 10px;
            border-collapse: collapse;
        }

            .table th, .table td {
                border: 1px solid #000 !important;
                padding: 4px !important;
            }

        .badge {
            border: 1px solid #000;
            color: #000 !important;
            background-color: transparent !important;
        }

        h1 {
            font-size: 18px;
            margin-bottom: 10px;
        }

        h2 {
            font-size: 16px;
            margin-bottom: 8px;
        }

        h3 {
            font-size: 14px;
            margin-bottom: 6px;
        }

        }

        /* Screen styles */
        @@media screen {
            body

        {
            background-color: #f8f9fa;
            padding: 20px;
        }

        .report-container {
            background: white;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            border-radius: 8px;
            padding: 30px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .print-actions {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
        }

        }

        .company-header {
            text-align: center;
            margin-bottom: 30px;
            border-bottom: 2px solid #007bff;
            padding-bottom: 20px;
        }

        .report-meta {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
        }

        .table th {
            background-color: #007bff !important;
            color: white !important;
            font-weight: bold;
        }

        .summary-box {
            background-color: #e7f3ff;
            border: 2px solid #007bff;
            border-radius: 5px;
            padding: 15px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <!-- Print Action Buttons (Hidden in print) -->
    <div class="print-actions no-print">
        <div class="btn-group-vertical">
            <button class="btn btn-primary" onclick="window.print()">
                <i class="fas fa-print"></i> Print / Save as PDF
            </button>
            <a href="@Url.Action("AllRentals")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back
            </a>
        </div>
    </div>

    <div class="report-container">
        <!-- Company Header -->
        <div class="company-header">
            <h1><i class="fas fa-car"></i> Car Rental System</h1>
            <h2>Rental Report</h2>
        </div>

        <!-- Report Metadata -->
        <div class="report-meta">
            <div class="row">
                <div class="col-md-6">
                    <strong>Generated On:</strong> @ViewBag.GeneratedDate.ToString("MMMM dd, yyyy 'at' HH:mm")
                </div>
                <div class="col-md-6 text-end">
                    <strong>Report Period:</strong>
                    @if ((bool)(ViewBag.HasDateFilter ?? false))
                    {
                        <span>@(ViewBag.StartDateFormatted ?? "Start") - @(ViewBag.EndDateFormatted ?? "End")</span>
                    }
                    else
                    {
                        <span>All Time</span>
                    }
                </div>
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.StatusFilter as string))
            {
                <div class="row mt-2">
                    <div class="col-12">
                        <strong>Status Filter:</strong> @ViewBag.StatusFilter Only
                    </div>
                </div>
            }
        </div>

        <!-- Summary Statistics -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="text-center">
                    <h3 class="text-primary">@ViewBag.TotalRentals</h3>
                    <small>Total Rentals</small>
                </div>
            </div>
            <div class="col-md-3">
                <div class="text-center">
                    <h3 class="text-success">@ViewBag.ActiveRentals</h3>
                    <small>Active Rentals</small>
                </div>
            </div>
            <div class="col-md-3">
                <div class="text-center">
                    <h3 class="text-info">@ViewBag.CompletedRentals</h3>
                    <small>Completed Rentals</small>
                </div>
            </div>
            <div class="col-md-3">
                <div class="text-center">
                    <h3 class="text-warning">Rp @ViewBag.TotalRevenue.ToString("N0")</h3>
                    <small>Total Revenue</small>
                </div>
            </div>
        </div>

        @if (Model.Any())
        {
            <!-- Rentals Table -->
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th style="width: 8%;">ID</th>
                            <th style="width: 20%;">User</th>
                            <th style="width: 20%;">Car</th>
                            <th style="width: 12%;">Start Date</th>
                            <th style="width: 12%;">End Date</th>
                            <th style="width: 8%;">Days</th>
                            <th style="width: 12%;">Total Price</th>
                            <th style="width: 8%;">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rental in Model)
                        {
                            <tr>
                                <td>@rental.Id</td>
                                <td>
                                    <div><strong>@rental.User.FullName</strong></div>
                                    <div><small>@rental.User.Email</small></div>
                                </td>
                                <td>
                                    <div><strong>@rental.Car.Brand @rental.Car.Model</strong></div>
                                    <div><small>@rental.Car.LicensePlate</small></div>
                                </td>
                                <td>@rental.StartDate.ToString("MMM dd, yyyy")</td>
                                <td>@rental.EndDate.ToString("MMM dd, yyyy")</td>
                                <td>@rental.TotalDays</td>
                                <td>Rp @rental.TotalPrice.ToString("N0")</td>
                                <td>
                                    @if (rental.Status == CarRentalSystem.Models.RentalStatus.Active)
                                    {
                                        <span class="badge bg-warning text-dark">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Completed</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Summary Box -->
            <div class="summary-box">
                <div class="row">
                    <div class="col-md-8">
                        <h4>Report Summary</h4>
                        <p class="mb-0">
                            This report contains <strong>@Model.Count() rental transactions</strong>
                            with a total revenue of <strong>$@Model.Where(r => r.Status == CarRentalSystem.Models.RentalStatus.Completed).Sum(r => r.TotalPrice).ToString("N2")</strong>
                            from completed rentals.
                        </p>
                    </div>
                    <div class="col-md-4 text-end">
                        <small class="text-muted">
                            Generated by Car Rental System<br>
                            @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")
                        </small>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <h4>No rentals found</h4>
                <p class="text-muted">No rental data matches the selected criteria.</p>
            </div>
        }
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        window.addEventListener('beforeprint', function() {
            document.body.style.fontSize = '11px';
        });

        window.addEventListener('afterprint', function() {
            document.body.style.fontSize = '';
        });

        function downloadPDF() {
            window.focus();
            window.print();
        }

        if (window.innerWidth < 768) {
            document.querySelector('.report-container').style.padding = '15px';
            document.querySelector('.print-actions').style.position = 'relative';
            document.querySelector('.print-actions').style.top = 'auto';
            document.querySelector('.print-actions').style.right = 'auto';
            document.querySelector('.print-actions').style.marginBottom = '20px';
        }

        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey && e.key === 'p') {
                e.preventDefault();
                window.print();
            }
        });
    </script>
</body>
</html>
